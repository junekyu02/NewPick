<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_marginLeft="5dp"
            android:id="@+id/previousBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/arrow_back_ios"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/keywordNameBelow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:fontFamily="@font/ibmplexsanskr_semibold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="내가 북마크 한 글"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <!--구분선-->
    <View
        android:layout_marginLeft="10dp"
        android:layout_width="390dp"
        android:layout_height="1dp"
        android:layout_marginVertical="8dp"
        android:background="@android:color/darker_gray" />


    <TextView
        android:id="@+id/no_bookmarked_textview"
        android:layout_width="match_parent"
        android:layout_height="818dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="아직 북마크한 뉴스가 없습니다.\n다시 보고 싶은 뉴스를 북마크해보세요!" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewBookmarkedNews"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
