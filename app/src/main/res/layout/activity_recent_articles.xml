<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/previousBtn"
                android:layout_width="45dp"
                android:layout_height="37dp"
                android:background="@drawable/arrow_back_ios"
                android:gravity="center"
                tools:layout_editor_absoluteX="-1dp"
                tools:layout_editor_absoluteY="11dp" />

            <TextView
                android:id="@+id/keywordName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ibmplexsanskr_semibold"
                android:gravity="center"
                android:text="최근 본 뉴스"
                android:textColor="#3f63bf"
                android:textSize="30sp"
                tools:layout_editor_absoluteX="131dp"
                tools:layout_editor_absoluteY="0dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/no_bookmarked_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="최근 본 뉴스가 없습니다.\n"
            android:layout_gravity="center"
            android:gravity="center"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewRecentArticles"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</layout>
