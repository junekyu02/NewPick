        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 상단 타이틀 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/ibmplexsanskr_semibold"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:text="Home"
                android:textSize="24sp" />

            <!-- 실시간 키워드 섹션 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="인기 급상승 검색어"
                    android:textSize="30sp"
                    android:fontFamily="@font/ibmplexsanskr_semibold"
                    android:layout_weight="1"
                    android:gravity="start"/>

                <ImageView
                    android:id="@+id/filterBtn"
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:padding="5dp"
                    android:src="@drawable/filter" />
            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginVertical="8dp"/>

            <!-- 키워드 리스트 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1" />

            <!-- 하단 네비게이션 바 -->
            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:weightSum="4"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/bottomNavigation_home"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/home" />

                <ImageView
                    android:id="@+id/bottomNavigation_my_keyword"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/news" />

                <ImageView
                    android:id="@+id/bottomNavigation_chat"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/chat" />

                <ImageView
                    android:id="@+id/bottomNavigation_my_page"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/account_circle" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</layout>